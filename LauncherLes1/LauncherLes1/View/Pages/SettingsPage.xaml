<Page x:Class="LauncherLes1.View.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LauncherLes1.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      d:Background="Black"
      Title="SettingsPage">
    
    <Grid>
        <CheckBox Name="CheckBox" Content="Авто обновление" HorizontalAlignment="Center" Margin="0,219,0,0" VerticalAlignment="Top" Width="120" Height="15" Foreground="White" Unchecked="CheckBox_Unchecked" Checked="CheckBox_Cecked"/>
        <Button Name="CheckUpdateLauncher" Click="CheckUpdateLauncher_Click" Content="Проверить обновление лаунчера" HorizontalAlignment="Center" Margin="0,250,0,0" VerticalAlignment="Top"/>
        <TextBlock Name="_textServerVersion" HorizontalAlignment="Right" VerticalAlignment="Bottom" Foreground="White" Margin="0,0,5,5">Версия лаунчера: </TextBlock>
    </Grid>
</Page>
