<Page x:Class="LauncherLes1.View.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LauncherLes1.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      d:Background="Black"
      Title="SettingsPage">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1">
            <Label FontFamily="/View/Resources/Fonts/RubikBold.ttf" Foreground="White" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="25">Cтраница настроек</Label>
            <CheckBox Name="CheckBox" Content="Авто обновление" HorizontalAlignment="Center" Margin="0,219,0,0" VerticalAlignment="Top" Width="120" Height="15" Foreground="White" Unchecked="CheckBox_Unchecked" Checked="CheckBox_Cecked"/>
            <Button Name="CheckUpdateLauncher" Click="CheckUpdateLauncher_Click" Content="Проверить обновление лаунчера" HorizontalAlignment="Center" Margin="0,250,0,0" VerticalAlignment="Top"/>
        </Grid>
    </Grid>
</Page>
