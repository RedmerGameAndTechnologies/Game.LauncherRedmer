<Page x:Class="LauncherLes1.View.OpenDefenderRatPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LauncherLes1.View"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="OpenDefenderRatPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Image Grid.RowSpan="2" HorizontalAlignment="Center" VerticalAlignment="Top"
               Stretch="Fill" Source="/View/Resources/Background/Png/Defender Rat.png"/>
        <Grid Grid.Row="2">
            <Button Content="Скачать игру" FontSize="14" HorizontalAlignment="Left" Margin="225,0,0,0" VerticalAlignment="Center" Height="34" Width="140"/>
            <ProgressBar HorizontalAlignment="Left" VerticalAlignment="Center" Width="550" Height="14" Margin="400,0,0,0"></ProgressBar>
            <Button Margin="955,0,0,0" x:Name="ButtonCancelDownloadFile" Click="ButtonCancelDownloadApp"  HorizontalContentAlignment="Center" BorderBrush="Transparent" FontWeight="Thin" Width="14" Height="14" VerticalAlignment="Center" HorizontalAlignment="Left" IsEnabled="False" Foreground="#00000000">
                <Button.Background>
                    <ImageBrush ImageSource="/View/Resources/Icons/Png/StopProccesButton.png"/>
                </Button.Background>
            </Button>
        </Grid>
    </Grid>
</Page>
